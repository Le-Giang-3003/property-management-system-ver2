@section Scripts {
    <script>
        function closeModals() {
            document.getElementById('detailModal').style.display = 'none';
            document.getElementById('applicationModal').style.display = 'none';
        }

        function openApplicationModal(propertyId, propertyTitle) {
            closeModals();
            document.getElementById('applicationForm').action = `?handler=Apply&propertyId=${propertyId}`;
            document.getElementById('appPropertyTitle').textContent = propertyTitle;
            document.getElementById('applicationModal').style.display = 'flex';
        }

        function openDetailModal(prop) {
            closeModals();
            document.getElementById('detailTitle').textContent = prop.Title;
            
            const slider = document.getElementById('detailImageSlider');
            slider.style.display = 'flex';
            slider.innerHTML = '<div style="padding: 20px; text-align: center; width: 100%; font-size: 14px;">ƒêang t·∫£i ·∫£nh...</div>';
            
            fetch(`?handler=PropertyDetails&id=${prop.Id}`)
                .then(res => res.json())
                .then(data => {
                    if (data.Images && data.Images.length > 0) {
                        const sortedImages = [...data.Images].sort((a,b) => (b.IsPrimary === true ? 1 : 0) - (a.IsPrimary === true ? 1 : 0));
                        slider.innerHTML = sortedImages.map(img => `<img src="${img.ImageUrl}" alt="Property Image" />`).join('');
                    } else if (prop.ThumbnailUrl) {
                        slider.innerHTML = `<img src="${prop.ThumbnailUrl}" alt="Thumbnail" />`;
                    } else {
                        slider.innerHTML = '<div style="padding: 20px; text-align: center; width: 100%; color: var(--text-muted);">Ch∆∞a c√≥ h√¨nh ·∫£nh n√†o.</div>';
                    }
                })
                .catch(err => {
                    console.error(err);
                    if (prop.ThumbnailUrl) {
                        slider.innerHTML = `<img src="${prop.ThumbnailUrl}" alt="Thumbnail" />`;
                    } else {
                        slider.style.display = 'none';
                    }
                });

            let statusText = prop.Status === 'Available' ? 'C√≤n tr·ªëng' :
                             prop.Status === 'Rented' ? 'ƒê√£ thu√™' : String(prop.Status);
            let statusClass = prop.Status === 'Available' ? 'badge-success' :
                              prop.Status === 'Rented' ? 'badge-info' : 'badge-gray';

            const statusEl = document.getElementById('detailStatus');
            statusEl.textContent = statusText;
            statusEl.className = `badge ${statusClass}`;
            document.getElementById('detailCreatedAt').textContent = 'Ng√†y ƒëƒÉng: ' + new Date(prop.CreatedAt).toLocaleDateString('vi-VN');
            
            let typeText = prop.PropertyType === 1 ? 'CƒÉn h·ªô' : 
                           prop.PropertyType === 2 ? 'Nh√† ph·ªë' : 
                           prop.PropertyType === 3 ? 'CƒÉn h·ªô studio' : 
                           prop.PropertyType === 4 ? 'Ph√≤ng tr·ªç' : String(prop.PropertyType);
            document.getElementById('dtPropertyType').value = prop.PropertyTypeText || typeText;
            document.getElementById('dtCity').value = prop.City || '';
            document.getElementById('dtDistrict').value = prop.District || '';
            document.getElementById('dtWard').value = prop.Ward || '';
            document.getElementById('dtAddress').value = prop.Address || '';
            document.getElementById('dtArea').value = prop.Area || '';
            document.getElementById('dtFloors').value = prop.Floors || '';
            document.getElementById('dtBedrooms').value = prop.Bedrooms || '0';
            document.getElementById('dtBathrooms').value = prop.Bathrooms || '0';
            document.getElementById('dtAmenities').value = prop.Amenities || '';
            document.getElementById('dtAllowPets').checked = prop.AllowPets || false;
            document.getElementById('dtAllowSmoking').checked = prop.AllowSmoking || false;
            document.getElementById('dtDesc').value = prop.Description || '';
            
            document.getElementById('dtRent').value = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(prop.MonthlyRent);
            document.getElementById('dtDeposit').value = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(prop.DepositAmount);

            document.getElementById('detailModal').style.display = 'flex';
        }
    </script>
}
