    // ========== Toggle Password ==========
    function togglePw(fieldId, iconId) {
        var field = document.getElementById(fieldId);
        var icon = document.getElementById(iconId);
        if (!field) return;

        if (field.type === 'password') {
            field.type = 'text';
            icon.innerHTML = `
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
            `;
        } else {
            field.type = 'password';
            icon.innerHTML = `
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            `;
        }
    }

    // ========== Password Strength ==========
    function checkStrength(pw) {
        var fill = document.getElementById('pwStrengthFill');
        var text = document.getElementById('pwStrengthText');
        if (!fill) return;

        // T√≠nh ƒëi·ªÉm theo ƒë√∫ng y√™u c·∫ßu c·ªßa server (UserService.IsValidPassword)
        var score = 0;
        var hasUpper  = /[A-Z]/.test(pw);
        var hasLower  = /[a-z]/.test(pw);
        var hasDigit  = /[0-9]/.test(pw);
        var hasSpecial = /[^A-Za-z0-9]/.test(pw);
        var hasLen   = pw.length >= 8;

        if (hasLen)     score++;
        if (hasUpper)   score++;
        if (hasLower)   score++;
        if (hasDigit)   score++;
        if (hasSpecial) score++;

        var hint = '';
        if (pw.length > 0) {
            var missing = [];
            if (!hasLen)     missing.push('‚â•8 k√Ω t·ª±');
            if (!hasUpper)   missing.push('ch·ªØ IN HOA');
            if (!hasLower)   missing.push('ch·ªØ th∆∞·ªùng');
            if (!hasDigit)   missing.push('ch·ªØ s·ªë');
            if (!hasSpecial) missing.push('k√Ω t·ª± ƒë·∫∑c bi·ªát (!@@$%^&*...)');
            hint = missing.length === 0 ? '‚úì M·∫≠t kh·∫©u h·ª£p l·ªá' : '‚ö† C√≤n thi·∫øu: ' + missing.join(', ');
        }

        var levels = [
            { width: '0%',   color: '#374151' },
            { width: '20%',  color: '#ef4444' },
            { width: '40%',  color: '#f97316' },
            { width: '60%',  color: '#f59e0b' },
            { width: '80%',  color: '#3b82f6' },
            { width: '100%', color: '#10b981' },
        ];
        var level = pw.length === 0 ? levels[0] : (levels[score] || levels[5]);
        fill.style.width = level.width;
        fill.style.background = level.color;
        text.textContent = hint;
        text.style.color = score === 5 ? '#10b981' : '#f59e0b';
    }

    // ========== OTP Digit Inputs ==========
    var otpInputs = document.querySelectorAll('.otp-digit');
    var otpHidden = document.getElementById('RegisterForm_OtpCode');

    function syncOtp() {
        if (!otpHidden) return;
        var val = '';
        otpInputs.forEach(function(inp) { val += inp.value; });
        otpHidden.value = val;
    }

    otpInputs.forEach(function(inp, idx) {
        inp.addEventListener('input', function(e) {
            // Only allow digits
            this.value = this.value.replace(/\D/g, '').slice(0, 1);
            syncOtp();
            if (this.value && idx < otpInputs.length - 1) {
                otpInputs[idx + 1].focus();
            }
        });
        inp.addEventListener('keydown', function(e) {
            if (e.key === 'Backspace' && !this.value && idx > 0) {
                otpInputs[idx - 1].focus();
                otpInputs[idx - 1].value = '';
                syncOtp();
            }
        });
        inp.addEventListener('paste', function(e) {
            e.preventDefault();
            var pasted = (e.clipboardData || window.clipboardData).getData('text').replace(/\D/g, '').slice(0, 6);
            pasted.split('').forEach(function(ch, i) {
                if (otpInputs[i]) otpInputs[i].value = ch;
            });
            syncOtp();
            var nextEmpty = Math.min(pasted.length, otpInputs.length - 1);
            otpInputs[nextEmpty].focus();
        });
    });

    // ========== OTP Countdown Timer ==========
    (function startOtpTimer() {
        var countdown = document.getElementById('otpCountdown');
        var timerEl  = document.getElementById('otpTimer');
        if (!countdown) return;

        var seconds = 5 * 60; // 5 minutes
        var interval = setInterval(function() {
            seconds--;
            if (seconds <= 0) {
                clearInterval(interval);
                countdown.textContent = 'H·∫øt h·∫°n';
                if (timerEl) timerEl.classList.add('expired');
                var submitBtn = document.getElementById('submitOtpBtn');
                if (submitBtn) submitBtn.disabled = true;
                return;
            }
            var m = Math.floor(seconds / 60);
            var s = seconds % 60;
            countdown.textContent = m + ':' + (s < 10 ? '0' : '') + s;
        }, 1000);
    })();

    // ========== Edit Info (back to register) ==========
    function editInfo() {
        document.getElementById('ActionType').value = 'Edit';
        document.getElementById('registerForm').submit();
    }

    // ========== Submit loading state ==========
    $(document).ready(function () {
        var actionType = document.getElementById('ActionType');
        var isVerifyStep = actionType && actionType.value === 'Verify';

        if (isVerifyStep) {
            // ·ªû b∆∞·ªõc Verify: t·∫Øt ho√†n to√†n jQuery Validation ƒë·ªÉ form lu√¥n submit ƒë∆∞·ª£c
            var form = document.getElementById('registerForm');
            if (form) {
                $(form).data('validator', null);
                $.validator && $.validator.unobtrusive && $.validator.unobtrusive.parse(form);
                // V√¥ hi·ªáu h√≥a validator
                var validator = $(form).validate();
                if (validator) validator.settings.ignore = '*';
            }
        }

        $('#registerForm').on('submit', function (e) {
            var currentActionType = document.getElementById('ActionType');
            var isVerify = currentActionType && currentActionType.value === 'Verify';

            if (isVerify) {
                // Sync OTP tr∆∞·ªõc khi submit
                syncOtp();

                var otpVal = document.getElementById('RegisterForm_OtpCode');
                if (!otpVal || otpVal.value.replace(/\D/g, '').length < 6) {
                    e.preventDefault();
                    return;
                }

                var btn = $(this).find('.btn-register')[0];
                if (!btn || btn.disabled) return;
                btn.disabled = true;
                btn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" stroke-width="2"
                         style="animation: spin 1s linear infinite; width:16px; height:16px;">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9
                               m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    ƒêang x√°c th·ª±c...
                `;
                return; // cho form submit b√¨nh th∆∞·ªùng
            }

            // B∆∞·ªõc SendOtp: ki·ªÉm tra jQuery validation ƒë√£ ch·∫∑n ch∆∞a
            if (e.isDefaultPrevented()) return;

            var btn = $(this).find('.btn-register')[0];
            if (!btn || btn.disabled) return;

            btn.disabled = true;
            btn.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor" stroke-width="2"
                     style="animation: spin 1s linear infinite; width:16px; height:16px;">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9
                           m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                ƒêang x·ª≠ l√Ω...
            `;
        });
    });
</script>
