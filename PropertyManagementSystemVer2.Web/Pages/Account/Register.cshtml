<script>
    // ========== Role Card Selection ==========
    document.querySelectorAll('.role-card').forEach(function(card) {
        card.addEventListener('click', function() {
            document.querySelectorAll('.role-card').forEach(c => c.classList.remove('active'));
            this.classList.add('active');
