@section Scripts {
    <script>
        let currentPropId = null;
        let currentPropTitle = '';

        function closeModals() {
            document.getElementById('detailModal').style.display = 'none';
            document.getElementById('rejectModal').style.display = 'none';
        }

        function openDetailModal(prop) {
            closeModals();
            currentPropId = prop.Id;
            currentPropTitle = prop.Title;
            
            document.getElementById('detailTitle').textContent = prop.Title;
            
            if (prop.ThumbnailUrl) {
                document.getElementById('detailImage').src = prop.ThumbnailUrl;
                document.getElementById('detailImage').style.display = 'block';
            } else {
                document.getElementById('detailImage').style.display = 'none';
            }

            document.getElementById('detailType').textContent = prop.PropertyType;

            let statusText = prop.Status === 1 ? 'C√≤n tr·ªëng' :
                             prop.Status === 2 ? 'ƒê√£ thu√™' :
                             prop.Status === 3 ? 'Ch·ªù duy·ªát' :
                             prop.Status === 5 ? 'T·ª´ ch·ªëi' : String(prop.Status);
            
            let statusClass = prop.Status === 1 ? 'badge-success' :
                              prop.Status === 2 ? 'badge-info' :
                              prop.Status === 3 ? 'badge-warning' :
                              prop.Status === 5 ? 'badge-danger' : 'badge-gray';

            const statusEl = document.getElementById('detailStatus');
            statusEl.textContent = statusText;
            statusEl.className = `badge ${statusClass}`;

            document.getElementById('detailArea').textContent = `${prop.Area} m¬≤`;
            document.getElementById('detailBedrooms').textContent = prop.Bedrooms;
            document.getElementById('detailBathrooms').textContent = prop.Bathrooms;
            
            // Build full address
            let addr = [prop.Address, prop.District, prop.City].filter(Boolean).join(', ');
            document.getElementById('detailAddressFull').textContent = addr;

            document.getElementById('detailRent').textContent = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(prop.MonthlyRent);
            
            if (prop.Landlord) {
                document.getElementById('detailLandlord').textContent = prop.Landlord.FullName;
            } else {
                document.getElementById('detailLandlord').textContent = 'N/A';
            }

            // Show actions if pending
            const actionsDiv = document.getElementById('detailActions');
            if (prop.Status === 3) { // PendingApproval
                actionsDiv.style.display = 'flex';
                document.getElementById('detailApproveForm').action = `?handler=Approve&id=${prop.Id}`;
            } else {
                actionsDiv.style.display = 'none';
            }

            document.getElementById('detailModal').style.display = 'flex';
        }

        function openRejectModal(id, title) {
            closeModals();
            currentPropId = id;
            currentPropTitle = title;
            document.getElementById('rejectPropTitle').textContent = title;
            document.getElementById('rejectForm').action = `?handler=Reject&id=${id}`;
            document.getElementById('rejectModal').style.display = 'flex';
        }

        function openRejectFromDetail() {
            openRejectModal(currentPropId, currentPropTitle);
        }
    </script>
}
