                    } else if (prop.ThumbnailUrl) {
                        slider.innerHTML = `<div class="slide"><img src="${prop.ThumbnailUrl}" alt="Thumbnail" /></div>`;
                        slider.style.display = 'flex';
                    }

                    if (prop.Status === 4 && prop.RejectionReason) {
                        document.getElementById('detailRejectionReasonText').textContent = prop.RejectionReason;
                        document.getElementById('detailRejectionMsg').style.display = 'block';
                    }

                    let typeText = prop.PropertyType === 1 ? 'CƒÉn h·ªô' :
