                                   prop.PropertyType === 4 ? 'Ph√≤ng tr·ªç' : String(prop.PropertyType);
                    document.getElementById('detailType').textContent = typeText;

                    let statusText = prop.Status === 7 ? 'C√≤n tr·ªëng' :
                                     prop.Status === 5 ? 'ƒê√£ thu√™' :
                                     prop.Status === 2 ? 'Ch·ªù duy·ªát' :
                                     prop.Status === 3 ? 'ƒê√£ duy·ªát' :
                                     prop.Status === 4 ? 'T·ª´ ch·ªëi' :
                                     prop.Status === 8 ? 'B·ªã kh√≥a' :
                                     prop.Status === 6 ? 'T·∫°m ·∫©n' : String(prop.Status);
                    
                    let statusClass = prop.Status === 7 ? 'badge-success' :
                                      prop.Status === 5 ? 'badge-info' :
                                      prop.Status === 2 ? 'badge-warning' :
                                      prop.Status === 3 ? 'badge-warning' :
                                      prop.Status === 4 ? 'badge-danger' : 
                                      prop.Status === 8 ? '' : 'badge-gray';

                    const statusEl = document.getElementById('detailStatus');
                    statusEl.textContent = statusText;
                    statusEl.className = `badge ${statusClass}`;
                    if(prop.Status === 8) {
                        statusEl.style.background = 'rgba(52, 58, 64, 0.1)';
                        statusEl.style.color = '#343a40';
                        statusEl.style.border = '1px solid #343a40';
                    } else {
                        statusEl.style.background = '';
                        statusEl.style.color = '';
                        statusEl.style.border = '';
                    }

                    document.getElementById('detailArea').textContent = `${prop.Area} m¬≤`;
                    document.getElementById('detailBedrooms').textContent = prop.Bedrooms;
                    document.getElementById('detailBathrooms').textContent = prop.Bathrooms;
                    document.getElementById('detailFloors').textContent = prop.Floors || 'Kh√¥ng r√µ';
                    
                    let addr = [prop.Address, prop.Ward, prop.District, prop.City].filter(Boolean).join(', ');
                    document.getElementById('detailAddressFull').textContent = addr;

                    document.getElementById('detailRent').textContent = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(prop.MonthlyRent);
                    document.getElementById('detailDeposit').textContent = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(prop.DepositAmount);
                    
                    document.getElementById('detailPets').textContent = prop.AllowPets ? 'C√≥' : 'Kh√¥ng';
                    document.getElementById('detailSmoking').textContent = prop.AllowSmoking ? 'C√≥' : 'Kh√¥ng';
                    document.getElementById('detailAmenities').textContent = prop.Amenities || 'Kh√¥ng c√≥';
                    document.getElementById('detailDesc').textContent = prop.Description || 'Kh√¥ng c√≥ m√¥ t·∫£';
                    
                    if (prop.Landlord) {
