@section Scripts {
    <script>
        let currentPropId = null;
        let currentPropTitle = '';

        function closeModals() {
            document.getElementById('detailModal').style.display = 'none';
            document.getElementById('rejectModal').style.display = 'none';
            document.getElementById('blockModal').style.display = 'none';
        }

        function openDetailModal(id, title) {
            closeModals();
            currentPropId = id;
            currentPropTitle = title;
            document.getElementById('detailTitle').textContent = title;
            
            document.getElementById('detailType').textContent = 'ƒêang t·∫£i...';
            document.getElementById('detailImageSlider').style.display = 'none';
            document.getElementById('detailImageSlider').innerHTML = '';
            document.getElementById('detailRejectionMsg').style.display = 'none';

            fetch(`?handler=PropertyDetails&id=${id}`)
                .then(res => res.json())
                .then(prop => {
                    const slider = document.getElementById('detailImageSlider');
                    if (prop.Images && prop.Images.length > 0) {
                        slider.innerHTML = prop.Images.map(img => `
                            <div class="slide">
                                <img src="${img.ImageUrl}" alt="Property Image" />
                                ${img.IsPrimary ? '<span class="primary-badge">·∫¢nh ch√≠nh</span>' : ''}
