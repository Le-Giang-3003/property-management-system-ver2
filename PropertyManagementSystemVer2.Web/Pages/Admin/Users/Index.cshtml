@page
@model PropertyManagementSystemVer2.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<!-- Filter -->
<div class="filter-bar">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-md-3">
            <label class="form-label small mb-1">Search</label>
            <input type="text" name="search" value="@Model.Search" class="form-control form-control-sm" placeholder="Name, email, phone..." />
        </div>
        <div class="col-md-2">
            <label class="form-label small mb-1">Role</label>
            <select name="role" class="form-select form-select-sm">
                <option value="">All Roles</option>
                <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                <option value="Member" selected="@(Model.Role == "Member")">Member</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label small mb-1">Status</label>
            <select name="isActive" class="form-select form-select-sm">
                <option value="">All</option>
                <option value="true" selected="@(Model.IsActive == "true")">Active</option>
                <option value="false" selected="@(Model.IsActive == "false")">Inactive</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label small mb-1">Type</label>
            <select name="isLandlord" class="form-select form-select-sm">
                <option value="">All</option>
                <option value="true" selected="@(Model.IsLandlord == "true")">Landlord</option>
                <option value="false" selected="@(Model.IsLandlord == "false")">Tenant Only</option>
            </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-search me-1"></i>Filter</button>
            <a asp-page="/Admin/Users/Index" class="btn btn-outline-secondary btn-sm">Reset</a>
        </div>
    </form>
</div>

<!-- Table -->
<div class="card-panel">
    <div class="card-header-custom">
        <h6>Users</h6>
        <span class="badge badge-soft-secondary">@Model.Result.TotalCount total</span>
    </div>
    <div class="table-responsive">
        <table class="table table-admin">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Role</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Verified</th>
                    <th>Joined</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Result.Items.Any())
                {
                    <tr><td colspan="8" class="text-center text-muted py-4">No users found.</td></tr>
                }
                @foreach (var u in Model.Result.Items)
                {
                    <tr>
                        <td class="text-muted">#@u.Id</td>
                        <td>
                            <div class="fw-semibold">@u.FullName</div>
                            <div class="text-muted" style="font-size:.75rem">@u.Email</div>
                            <div class="text-muted" style="font-size:.75rem">@u.PhoneNumber</div>
                        </td>
                        <td>
                            @if (u.Role == DAL.Enums.UserRole.Admin)
                            {
                                <span class="badge badge-soft-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge badge-soft-secondary">Member</span>
                            }
                        </td>
                        <td>
                            @if (u.IsLandlord)
                            {
                                <span class="badge badge-soft-info me-1">Landlord</span>
                            }
                            @if (u.IsTenant)
                            {
                                <span class="badge badge-soft-primary">Tenant</span>
                            }
                        </td>
                        <td>
                            @if (u.IsActive)
                            {
                                <span class="badge badge-soft-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                            }
                            else
                            {

                                <span class="badge badge-soft-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                            }
                        </td>
                        <td>
                            <span title="Email">@(u.IsEmailVerified ? "✅" : "❌")</span>
                            <span title="Identity">@(u.IsIdentityVerified ? "🪪" : "")</span>
                        </td>
                        <td style="font-size:.8rem">@u.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-page="/Admin/Users/Detail" asp-route-id="@u.Id" class="btn btn-outline-primary btn-xs" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-page="/Admin/Users/Edit" asp-route-id="@u.Id" class="btn btn-outline-warning btn-xs" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-page-handler="ToggleActive" asp-route-id="@u.Id" class="d-inline">
                                    <button type="submit" class="btn btn-xs @(u.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                            title="@(u.IsActive ? "Deactivate" : "Activate")"
                                            onclick="return confirm('@(u.IsActive ? "Deactivate" : "Activate") this user?')">
                                        <i class="bi @(u.IsActive ? "bi-person-slash" : "bi-person-check")"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.Result.TotalPages > 1)
    {
        <div class="card-body-custom pt-0">
            <nav>
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(!Model.Result.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-search="@Model.Search" asp-route-role="@Model.Role"
                           asp-route-isActive="@Model.IsActive" asp-route-isLandlord="@Model.IsLandlord">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.Result.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@i"
                               asp-route-search="@Model.Search" asp-route-role="@Model.Role"
                               asp-route-isActive="@Model.IsActive" asp-route-isLandlord="@Model.IsLandlord">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.Result.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-search="@Model.Search" asp-route-role="@Model.Role"
                           asp-route-isActive="@Model.IsActive" asp-route-isLandlord="@Model.IsLandlord">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>