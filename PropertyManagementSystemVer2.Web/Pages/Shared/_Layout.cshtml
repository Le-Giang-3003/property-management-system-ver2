@* File: Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Nhà cho thuê</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-house-door-fill me-2"></i>PropertyMS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index"><i class="bi bi-house me-1"></i>Trang chủ</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        var fullName = Context.Session.GetString("FullName") ?? "User";
                        var role = Context.Session.GetString("Role") ?? "";
                        var isLandlord = Context.Session.GetString("IsLandlord") == "True";
                        var isTenant = Context.Session.GetString("IsTenant") == "True";

                        <!-- Role Switch -->
                        @if (isLandlord && isTenant)
                        {
                            var currentPortal = Context.Session.GetString("CurrentPortal") ?? "Tenant";
                            <li class="nav-item me-2">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm @(currentPortal == "Tenant" ? "btn-light" : "btn-outline-light")"
                                       href="/Auth/SwitchPortal?portal=Tenant">
                                        <i class="bi bi-person me-1"></i>Tenant
                                    </a>
                                    <a class="btn btn-sm @(currentPortal == "Landlord" ? "btn-light" : "btn-outline-light")"
                                       href="/Auth/SwitchPortal?portal=Landlord">
                                        <i class="bi bi-building me-1"></i>Landlord
                                    </a>
                                </div>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@fullName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text text-muted small">@role</span></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-page="/Auth/Profile"><i class="bi bi-gear me-2"></i>Hồ sơ</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-page="/Auth/Logout">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Auth/Login"><i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm ms-2 mt-1" asp-page="/Auth/Register">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container py-4">
        <!-- Toast notifications -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year PropertyManagementSystem. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>