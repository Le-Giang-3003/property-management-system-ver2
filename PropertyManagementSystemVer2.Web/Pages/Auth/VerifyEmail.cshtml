@page
@model PropertyManagementSystemVer2.Web.Pages.Auth.VerifyEmailModel
@{
    ViewData["Title"] = "Xác thực email";
    Layout = "_AuthLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="auth-card text-center">
            @if (Model.IsSuccess)
            {
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                </div>
                <h4 class="fw-bold text-success">Xác thực thành công!</h4>
                <p class="text-muted mb-4">Email của bạn đã được xác thực. Bạn có thể đăng nhập ngay.</p>
                <a asp-page="/Auth/Login" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                </a>
            }
            else
            {
                <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-x-circle fs-1 text-danger"></i>
                </div>
                <h4 class="fw-bold text-danger">Xác thực thất bại</h4>
                <p class="text-muted mb-4">@Model.ErrorMessage</p>
                <a asp-page="/Auth/Login" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại đăng nhập
                </a>
            }
        </div>
    </div>
</div>
