@* File: Pages/Auth/ForgotPassword.cshtml *@
@page
@model PropertyManagementSystemVer2.Web.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_AuthLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="auth-card">
            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-key fs-2 text-primary"></i>
                </div>
                <h4 class="fw-bold">Quên mật khẩu?</h4>
                <p class="text-muted">Nhập email hoặc SĐT để nhận mã OTP</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Input.Identifier" class="form-label">Email hoặc Số điện thoại</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-person-badge input-icon"></i>
                        <input asp-for="Input.Identifier" class="form-control" placeholder="email@example.com hoặc 0901234567" />
                    </div>
                    <span asp-validation-for="Input.Identifier" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">
                    <i class="bi bi-send me-2"></i>Gửi mã OTP
                </button>

                <p class="text-center">
                    <a asp-page="/Auth/Login" class="text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại đăng nhập
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}