@page
@model PropertyManagementSystemVer2.Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6 col-xl-5">
        <div class="auth-card">
            <h4 class="text-center fw-bold mb-1">Tạo tài khoản</h4>
            <p class="text-center text-muted mb-4">Đăng ký miễn phí</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Full Name -->
                <div class="mb-3">
                    <label asp-for="Input.FullName" class="form-label">Họ và tên</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-person input-icon"></i>
                        <input asp-for="Input.FullName" class="form-control" placeholder="Nguyễn Văn A" />
                    </div>
                    <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-envelope input-icon"></i>
                        <input asp-for="Input.Email" class="form-control" placeholder="email@example.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-phone input-icon"></i>
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="0901234567" />
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-lock input-icon"></i>
                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="••••••••"
                               oninput="checkPasswordStrength(this.value)" autocomplete="new-password" />
                        <button type="button" class="password-toggle"><i class="bi bi-eye"></i></button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="password-strength">
                        <div id="passwordStrengthBar" class="password-strength-bar"></div>
                    </div>
                    <small id="passwordStrengthText" class="text-muted"></small>
                    <div class="mt-1">
                        <small class="text-muted">Tối thiểu 8 ký tự: chữ hoa, chữ thường, số, ký tự đặc biệt</small>
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-lock-fill input-icon"></i>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="••••••••"
                               autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Address (optional) -->
                <div class="mb-4">
                    <label asp-for="Input.Address" class="form-label">Địa chỉ <span class="text-muted">(tuỳ chọn)</span></label>
                    <div class="input-icon-wrapper">
                        <i class="bi bi-geo-alt input-icon"></i>
                        <input asp-for="Input.Address" class="form-control" placeholder="Số nhà, đường, quận..." />
                    </div>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary w-100 mb-3">
                    <i class="bi bi-person-plus me-2"></i>Đăng ký
                </button>
            </form>

            <div class="divider-text my-3">hoặc</div>

            <p class="text-center mb-0">
                Đã có tài khoản?
                <a asp-page="/Auth/Login" class="fw-semibold text-decoration-none">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}